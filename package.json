{
  "name": "microfrontend-orchestrator-uploader",
  "version": "1.0.0",
  "description": "GitHub Action to zip a folder and upload to microfrontend orchestrator service",
  "main": "index.js",
  "scripts": {
    "dev": "node __test__/test-local.js",
    "build": "ncc build index.js -o dist",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run package"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3",
    "adm-zip": "^0.5.10",
    "form-data": "^4.0.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "dotenv": "^17.2.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "keywords": [
    "github-actions",
    "microfrontend",
    "orchestrator",
    "deployment"
  ],
  "author": "Lorenzo De Francesco",
  "license": "MIT"
}